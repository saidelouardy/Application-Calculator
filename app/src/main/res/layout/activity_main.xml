<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">
    <TextView
        android:id="@+id/textecrit"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="0"
        android:paddingTop="20dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textresult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:paddingTop="10dp"
        android:textSize="38dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonegale"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:backgroundTint="@color/B"
            android:layout_marginHorizontal="6dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttondelet"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/B"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonleft"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="()"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonmodele"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="%"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttondivise"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button9"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonfoux"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="*"
            android:paddingTop="15dp"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonmoin"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonplus"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="35dp"
            app:cornerRadius="70dp"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>

</LinearLayout>